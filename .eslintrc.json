{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "semi": ["error", "always"],
      "no-trailing-spaces": "error",
      "no-unused-vars": "error",
      "no-mixed-spaces-and-tabs": "error",
      "no-extra-semi": "error",
      "no-irregular-whitespace": "warn",
      "default-case": "error",
      "default-case-last": "error",
      "eqeqeq": "warn",
      "require-await": "error",
      "no-use-before-define": "warn"
    }
}
